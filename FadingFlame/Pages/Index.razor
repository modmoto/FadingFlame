@page "/"
@using FadingFlame.Leagues
@inject ILeagueRepository _leagueRepository

<div>
  <h1 class="display-4">Welcome to the Fading Flame League!</h1>
  <hr class="my-4">
  <p>This is a online league for the 9th-age wargame all over the world.</p>
</div>
<table class="table">
    <thead>
    <tr>
        @_leagues.FirstOrDefault()?.Season
    </tr>
    <tr>
        <th>Name</th>
        <th>Points</th>
        <th>Matches</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var playerInLeague in _leagues)
    {
        <tr>
            <td>@playerInLeague.Name</td>
            <td>@playerInLeague.Season</td>
        </tr>
    }
    </tbody>
</table>

@code
{
    private List<League> _leagues = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        _leagues = await _leagueRepository.LoadForSeason(1);
        StateHasChanged();
    }
}
