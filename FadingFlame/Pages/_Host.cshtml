@page "/{handler?}"
@model HostModel
@namespace FadingFlame.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>FadingFlame</title>
    <base href="~/"/>
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css"/>
    <script src="js/bootstrap.bundle.min.js"></script>
    <link href="css/site.css" rel="stylesheet"/>
    <link href="css/flags.css" rel="stylesheet"/>
    <link href="css/css/flag-icon.min.css" rel="stylesheet"/>
    <link href="FadingFlame.styles.css" rel="stylesheet"/>
</head>
<body>
<component type="typeof(App)" render-mode="ServerPrerendered"/>

<div id="blazor-error-ui">
    <environment include="Development,Staging">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script>
function GetTimezoneOffset() {
    return new Date().getTimezoneOffset();
}
</script>

<script>
    new MutationObserver((mutations, observer) => {
        if (document.querySelector('#components-reconnect-modal h5 a')) {
            async function attemptReload() {
                const response = await fetch('');
                if (response.ok) {
                    location.reload();    
                }
            }
            observer.disconnect();
            attemptReload();
            setInterval(attemptReload, 5000);
        }
    }).observe(document.body, { childList: true, subtree: true });
</script>

<script src="_framework/blazor.server.js"></script>
</body>
</html>