@using FadingFlame.UserAccounts
@inject UserState _userState

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Fading Flame</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/admin" Match="NavLinkMatch.All" hidden="@(!_userState.UserIsAdmin)">
                <span class="oi oi-account-login" aria-hidden="true"></span>Admin
            </NavLink>
        </li>
    </ul>
</div>

@code {
    public string LoggedInPlayerId => _userState.LoggedInPlayerId.ToString();
    public string Link => $"/player/{LoggedInPlayerId}";

    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override void OnInitialized()
    {
        _userState.UserLoggedIn += (_, _) =>
        {
            StateHasChanged();
        };
    }
}